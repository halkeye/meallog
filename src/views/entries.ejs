<%- include('partials/header', { pageTitle: "Entries" }) %>
<div class="container">
    <h1>Entries</h1>
    <a href="/entries/new" class="btn">Create New Entry</a>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Notes</th>
                <th>Timestamp</th>
                <th>Images</th>
            </tr>
        </thead>
        <tbody>
            <% entries.forEach(entry => { %>
                <tr>
                    <td><%= entry.title %></td>
                    <td><%= entry.notes %></td>
                    <td><%= new Date(entry.timestamp).toLocaleString() %></td>
                    <td>
                        <% if (entry.images) { %>
                            <% entry.images.forEach(image => { %>
                                <img src="<%= image.image %>" alt="Entry Image" class="entry-image">
                            <% }) %>
                        <% } else { %>
                            No images
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('partials/footer') %>
